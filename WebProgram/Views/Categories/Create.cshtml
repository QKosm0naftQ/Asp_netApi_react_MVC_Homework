@model CategoryCreateViewModel

@{
    ViewData["Title"] = "Створити категорію";
}

<h1 class="text-center mt-4 mb-4">Створення категорії</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <form asp-action="Create" enctype="multipart/form-data" class="p-4 shadow-sm rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Назва -->
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Введіть назву категорії" required />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <!-- Опис -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Введіть опис категорії"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Зображення -->
            <div class="mb-4">
                <label asp-for="ImageFile" class="form-label fw-semibold"></label>
                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" id="ImageFile" />
                <span asp-validation-for="ImageFile" class="text-danger small"></span>
            </div>

            <!-- Кнопки -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success me-md-2">Створити категорію</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Скасувати</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
