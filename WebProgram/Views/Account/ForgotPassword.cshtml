@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Відновлення паролю";
}

<h1 class="text-center mt-4 mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
        <form asp-action="ForgotPassword" class="p-4 shadow-sm rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-4">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Відновити" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}