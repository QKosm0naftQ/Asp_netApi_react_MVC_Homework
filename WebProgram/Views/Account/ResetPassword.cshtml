@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Відновлення паролю - новий пароль";
}

<h1 class="text-center mt-4 mb-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
        <form asp-action="ResetPassword" class="p-4 shadow-sm rounded bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-4">
                <!-- Token -->
                <div class="mb-3" hidden>
                    <label asp-for="Token" class="form-label fw-semibold"></label>
                    <input asp-for="Token" class="form-control" placeholder="Токен"/>
                </div>
                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Email" readonly>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <!-- Пароль -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Пароль"/>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Підтвердження пароля -->
                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Підтвердіть пароль"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>
            </div>
            <div class="d-grid">
                <input type="submit" value="Відновити" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        
    }
}