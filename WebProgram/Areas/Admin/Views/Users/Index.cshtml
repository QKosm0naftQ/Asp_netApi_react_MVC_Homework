@model List<UserItemViewModel>
@{

	ViewData["Title"] = "All Users";

}

<div class="card">
	<h5 class="card-header">Table Basic</h5>
	<div class="table-responsive text-nowrap">
		<table class="table">
			<thead>
				<tr>
					<th>#</th>
					<th>Icon</th>
					<th>Name</th>
					<th>Email</th>
					<th>Role</th>

					<th>Actions</th>
				</tr>
			</thead>
			<tbody class="table-border-bottom-0">
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td><img class="rounded-circle" alt="" style="width:auto;height:3rem" src="/images/200_@item.Image" /></td>
						<td>@item.LastName @item.FirstName</td>
						<td>@item.Email</td>
						<td>@String.Join(", ", item.Roles)</td>

						<td>
							<div class="dropdown">
								<button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="ri-more-2-line"></i></button>
								<div class="dropdown-menu">
									<a asp-action="Edit" asp-controller="Users" asp-route-id="@item.Id" class="dropdown-item"><i class="ri-pencil-line me-1"></i> Edit</a>
									@* <a class="dropdown-item" href="javascript:void(0);"><i class="ri-pencil-line me-1"></i> Edit</a> *@
									<a class="dropdown-item" href="javascript:void(0);"><i class="ri-delete-bin-6-line me-1"></i> Delete</a>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>